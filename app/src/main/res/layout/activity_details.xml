<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/details"
        app:navigationIcon="@drawable/ic_arrow_back_24"
        style="@style/toolbar"/>

    <ImageView
        android:id="@+id/img_details_avatar"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_below="@id/toolbar_details"
        style="@style/img_details"/>
    <TextView
        android:id="@+id/tv_details_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_details_avatar"
        style="@style/formelement"/>
    <TextView
        android:id="@+id/tv_details_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_details_id"
        style="@style/formelement"/>
    <TextView
        android:id="@+id/tv_details_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_details_email"
        style="@style/formelement"/>
    <TextView
        android:id="@+id/tv_details_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_details_first_name"
        style="@style/formelement"/>

    <ProgressBar
        android:id="@+id/pb_details"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_details_last_name"/>

</RelativeLayout>