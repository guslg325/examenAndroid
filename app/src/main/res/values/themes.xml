<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ExamenAndroid" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_variant</item>
        <item name="colorPrimaryVariant">@color/blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_dark</item>
        <item name="colorSecondaryVariant">@color/blue_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="formelement">
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:layout_marginVertical">5dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="email_credentials">
        <item name="android:src">@drawable/ic_baseline_email_light_theme_24</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginVertical">5dp</item>
    </style>
    <style name="password_credentials">
        <item name="android:src">@drawable/ic_baseline_password_light_theme_24</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginVertical">5dp</item>
    </style>

    <style name="nav_email">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="card">
        <item name="android:layout_margin">15dp</item>
        <item name="android:backgroundTint">@color/gray_light</item>
    </style>

    <style name="img">
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="toolbar">
        <item name="android:background">@color/blue_variant</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="navMenuHeader">
        <item name="android:background">@color/blue_variant</item>
    </style>
    <style name="navMenu">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="img_details">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginVertical">10dp</item>
    </style>
</resources>